<!DOCTYPE html>
html(lang="en" dir="ltr")
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Steven Gore Portfolio Site
    link(href='https://fonts.googleapis.com/css?family=Merriweather:300,400,400i,700,800', rel='stylesheet')
    link(rel='stylesheet', href='/static/css/normalize.css')
    link(rel='stylesheet', href='/static/css/styles.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href="https://fonts.gstatic.com" crossorigin)
    link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;700&display=swap' rel="stylesheet")


  body
    #my-info.sidebar
      .sidebar-info-box
        img.logo(src='/static/images/logo/SCG-logos_white.png' alt='SCG')
        .thumbnail-box
          img.thumbnail(src='/static/images/profile/profile.jpg', alt='Steven Gore')
        .dev-intro-box

          h5 #{name}

          p Passionate and motivated full-stack software engineer
          if isAboutPage
            a(href='/') Recent Projects &rarr;
          else
            a(href='/about') Learn More &rarr;

    .wrapper
      .header
        .header-info-box
          button#menu-icon.menu-icon(type='button' data-toggle='my-info')
          span #{name}

      block content

  script(src='/static/js/script.js')